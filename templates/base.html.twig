<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
	<meta content="width=device-width, initial-scale=1.0, user-scalable=no" name="viewport">
	<!--Cache control quitar para produccion-->
	<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
                 {{ encore_entry_link_tags('app') }}
                 {#{{ encore_entry_link_tags('style') }}#} <!-- esta es otra solucion para el style .addStyleEntry('style', './assets/styles/style.css') en el webpack -->
                 <!--<link href="{{ asset('css/style.css') }}" rel="stylesheet" /> -->
                 <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
                 <link href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" rel="stylesheet">
                 <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        {% endblock %}

    </head>
    <body>
    	{{include('header.html.twig')}}
    	{% block toolbar %}
	   	<nav id="toolbar" class="bd-subnavbar py-2" aria-label="Secondary navigation">
		<div class="container-xxl d-flex align-items-md-center">
		{% block toolbar_content %}
		    	{{include('toolbar.html.twig')}}
		{% endblock toolbar_content %}    		    	
	    	</div>
	    	</nav>
	{% endblock toolbar %}    	
	
	<div class="container-fluid">
	<div class="row">

	        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse show">
	        <div class="position-sticky pt-3">
			{% block sidebar_content %}
			    	{{include('sidebar_content.html.twig')}}
			{% endblock sidebar_content %}    		    	
		</div>
		</nav>
		
		<main id="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
			{% block main_content %}
			    	{{include('main_content.html.twig')}}
			{% endblock main_content %}    		    	
		</main>

	</div>
      	</div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    </body>
</html>
